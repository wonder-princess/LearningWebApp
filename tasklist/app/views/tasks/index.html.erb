<p>ログイン完了ユーザ: <%= current_user.name %></p>
<h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <div>
          <%= link_to task.id, task %>
        </div>
        <div>
          ステータス &gt; <%= task.status %>
        </div>
        <div>
          タスク &gt; <%= task.content %>
        </div>
      </li>
    <% end %>
  </ul>
<%= link_to '新規タスク追加', new_task_path %>