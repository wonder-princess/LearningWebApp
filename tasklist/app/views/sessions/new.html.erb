<div>
  <h1>Log in</h1>
</div>

<div>
  <%= form_with(url: login_path, scope: :session) do |f| %>

    <div class="mb-3">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email %>
    </div>

    <div class="mb-3">
      <%= f.label :password, 'Password' %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit 'Log in' %>
  <% end %>

  <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
</div>